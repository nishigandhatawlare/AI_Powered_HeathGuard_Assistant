@{
    ViewData["Title"] = "Virtual Consultations";
    Layout = "_Layout";
}

<!-- Main Container -->
<div class="container my-5">

    <!-- Video Conferencing Section -->
    <div class="card mb-4">
        <div class="card-header">
            <h4 class="font-weight-bold">Video Consultation</h4>
        </div>
        <div class="card-body">
            <div id="video-container" class="d-flex justify-content-between">
                <video id="patient-video" class="border" style="width: 48%;" autoplay></video>
                <video id="doctor-video" class="border" style="width: 48%;" autoplay muted></video>
            </div>
            <div class="controls d-flex justify-content-around mt-3">
                <button class="btn btn-primary" id="start-call">Start Call</button>
                <button class="btn btn-danger" id="end-call" disabled>End Call</button>
                <button class="btn btn-secondary" id="mute" disabled>Mute</button>
                <button class="btn btn-secondary" id="unmute" disabled>Unmute</button>
            </div>
        </div>
    </div>

    <!-- Real-Time Chat Section -->
    <div class="card mb-4">
        <div class="card-header">
            <h4 class="font-weight-bold">Real-Time Chat</h4>
        </div>
        <div class="card-body">
            <div id="chat-box" class="border" style="height: 200px; overflow-y: scroll;">
                <!-- Chat messages will appear here -->
            </div>
            <div class="d-flex mt-3">
                <input type="text" id="chat-input" class="form-control" placeholder="Type a message..." autocomplete="off">
                <button class="btn btn-primary ml-2" id="send-chat">Send</button>
            </div>
        </div>
    </div>

    <!-- File Sharing Section -->
    <div class="card mb-4">
        <div class="card-header">
            <h4 class="font-weight-bold">Share Files</h4>
        </div>
        <div class="card-body">
            <input type="file" id="file-upload" class="form-control" onchange="displayFileName()">
            <small id="file-name" class="form-text text-muted mt-2"></small>
            <button class="btn btn-primary mt-2" id="send-file">Send File</button>
        </div>
    </div>

    <!-- Notes Section -->
    <div class="card mb-4">
        <div class="card-header">
            <h4 class="font-weight-bold">Consultation Notes</h4>
        </div>
        <div class="card-body">
            <textarea id="doctor-notes" class="form-control" rows="4" placeholder="Enter notes here..."></textarea>
            <button class="btn btn-primary mt-2" id="save-notes">Save Notes</button>
            <div id="saved-notes" class="mt-3">
                <h5>Previously Saved Notes:</h5>
                <div id="notes-list" class="border p-2" style="height: 100px; overflow-y: auto;"></div>
            </div>
        </div>
    </div>

    <!-- Virtual Waiting Room -->
    <div class="waiting-room card mx-auto my-5" id="waiting-room" style="max-width: 600px;">
        <div class="card-body text-center">
            <h4>Your consultation will begin shortly</h4>
            <p>Please wait...</p>
            <img src="loading.gif" alt="Loading" class="img-fluid">
        </div>
    </div>

</div>

<!-- JavaScript for File Name Display -->
<script>
    function displayFileName() {
        const fileInput = document.getElementById("file-upload");
        const fileNameDisplay = document.getElementById("file-name");
        if (fileInput.files.length > 0) {
            fileNameDisplay.textContent = fileInput.files[0].name;
        } else {
            fileNameDisplay.textContent = "";
        }
    }
</script>
