@{
    Layout = "_Layout";
    ViewData["Title"] = "Health Monitoring Dashboard";
}

<div class="container-fluid">
    <!-- Graphs and Charts -->
    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5>Weight Trend</h5>
                </div>
                <div class="card-body">
                    <canvas id="weightChart"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5>Blood Pressure</h5>
                </div>
                <div class="card-body">
                    <canvas id="bpChart"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5>Glucose Levels</h5>
                </div>
                <div class="card-body">
                    <canvas id="glucoseChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Alerts for Abnormal Readings -->
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="alert alert-danger">
                <strong>Alert:</strong> Your last blood pressure reading is higher than normal. Please consult your doctor.
            </div>
            <div class="alert alert-warning">
                <strong>Alert:</strong> Your glucose level is slightly elevated. Consider adjusting your diet.
            </div>
        </div>
    </div>

    <!-- AI-Generated Health Insights -->
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5>AI-Generated Health Insights</h5>
                </div>
                <div class="card-body">
                    <p>Based on your recent data, it is recommended to increase your daily water intake and engage in regular cardiovascular exercise.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Integration with Health Apps -->
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5>Connected Health Apps</h5>
                </div>
                <div class="card-body">
                    <button class="btn btn-primary">Connect to Apple Health</button>
                    <button class="btn btn-primary">Connect to Google Fit</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/chart.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Weight Chart
        var ctxWeight = document.getElementById('weightChart').getContext('2d');
        var weightChart = new Chart(ctxWeight, {
            type: 'line',
            data: {
                labels: ['January', 'February', 'March', 'April', 'May', 'June'],
                datasets: [{
                    label: 'Weight',
                    data: [65, 66, 67, 68, 67, 66],
                    backgroundColor: 'rgba(54, 162, 235, 0.2)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // Blood Pressure Chart
        var ctxBP = document.getElementById('bpChart').getContext('2d');
        var bpChart = new Chart(ctxBP, {
            type: 'line',
            data: {
                labels: ['January', 'February', 'March', 'April', 'May', 'June'],
                datasets: [{
                    label: 'Blood Pressure',
                    data: [120, 122, 124, 126, 125, 123],
                    backgroundColor: 'rgba(255, 99, 132, 0.2)',
                    borderColor: 'rgba(255, 99, 132, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // Glucose Chart
        var ctxGlucose = document.getElementById('glucoseChart').getContext('2d');
        var glucoseChart = new Chart(ctxGlucose, {
            type: 'line',
            data: {
                labels: ['January', 'February', 'March', 'April', 'May', 'June'],
                datasets: [{
                    label: 'Glucose Levels',
                    data: [90, 92, 94, 96, 95, 93],
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    borderColor: 'rgba(75, 192, 192, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
}