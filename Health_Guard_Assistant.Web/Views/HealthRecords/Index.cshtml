@{
    Layout = "_Layout";
    ViewData["Title"] = "Health Records";
}

<div class="container my-5">

    <!-- Past Consultations Section -->
    <div class="card mb-4">
        <div class="card-header">Past Consultations</div>
        <div class="card-body">
            <ul class="list-group">
                <li class="list-group-item">Consultation with Dr. Smith - January 15, 2024</li>
                <li class="list-group-item">Consultation with Dr. Jones - February 10, 2024</li>
                <li class="list-group-item">Consultation with Dr. Brown - March 5, 2024</li>
            </ul>
        </div>
    </div>

    <!-- Lab Results Section -->
    <div class="card mb-4">
        <div class="card-header">Lab Results</div>
        <div class="card-body">
            <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Blood Test - January 20, 2024
                    <button class="btn btn-info btn-sm">Download</button>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    X-Ray Report - February 15, 2024
                    <button class="btn btn-info btn-sm">Download</button>
                </li>
            </ul>
        </div>
    </div>

    <!-- Prescriptions Section -->
    <div class="card mb-4">
        <div class="card-header">Prescriptions</div>
        <div class="card-body">
            <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Prescription for Blood Pressure Medication - January 25, 2024
                    <button class="btn btn-info btn-sm">Download</button>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Prescription for Diabetes Medication - February 20, 2024
                    <button class="btn btn-info btn-sm">Download</button>
                </li>
            </ul>
        </div>
    </div>

    <!-- File Upload Section -->
    <div class="card mb-4">
        <div class="card-header">Upload Health Records</div>
        <div class="card-body">
            <input type="file" class="form-control mb-3">
            <button type="button" class="btn btn-primary">Upload</button>
        </div>
    </div>

    <!-- Download and Print Buttons -->
    <div class="d-flex justify-content-between my-4">
        <button class="btn btn-primary">Download Records</button>
        <button class="btn btn-secondary">Print Records</button>
    </div>

    <!-- Sync Devices Section -->
    <div class="text-center">
        <button type="button" class="btn btn-warning">Sync with Devices</button>
    </div>

</div>
