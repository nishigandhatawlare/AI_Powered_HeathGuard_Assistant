@{
    Layout = "_Layout";
    ViewData["Title"] = "Medication Management";
}

<!-- Main Section -->
<div class="main container">
    <h1 class="text-center mb-4">Medication Management</h1>

    <!-- Content Area -->
    <div class="content-area row">
        <!-- Medications List -->
        <div class="col-md-4 mb-3">
            <div class="medication-card card shadow-sm border-light">
                <div class="card-body">
                    <h5 class="card-title">Paracetamol</h5>
                    <p class="card-text dosage">500mg</p>
                    <p class="card-text timing"><i class="fa fa-clock"></i> Morning</p>
                    <div class="actions d-flex justify-content-between mt-3">
                        <a href="#" class="btn btn-primary btn-sm">Edit</a>
                        <a href="#" class="btn btn-danger btn-sm">Remove</a>
                        <i class="fa fa-exclamation-circle text-warning" title="Interaction Warning"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="medication-card card shadow-sm border-light">
                <div class="card-body">
                    <h5 class="card-title">Ibuprofen</h5>
                    <p class="card-text dosage">200mg</p>
                    <p class="card-text timing"><i class="fa fa-clock"></i> Evening</p>
                    <div class="actions d-flex justify-content-between mt-3">
                        <a href="#" class="btn btn-primary btn-sm">Edit</a>
                        <a href="#" class="btn btn-danger btn-sm">Remove</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="medication-card card shadow-sm border-light">
                <div class="card-body">
                    <h5 class="card-title">Amoxicillin</h5>
                    <p class="card-text dosage">250mg</p>
                    <p class="card-text timing"><i class="fa fa-clock"></i> Night</p>
                    <div class="actions d-flex justify-content-between mt-3">
                        <a href="#" class="btn btn-primary btn-sm">Edit</a>
                        <a href="#" class="btn btn-danger btn-sm">Remove</a>
                        <i class="fa fa-exclamation-circle text-warning" title="Interaction Warning"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add some CSS for styling -->
<style>
    .main {
        padding: 20px;
        background-color: #f8f9fa;
    }

    .medication-card {
        border-radius: 8px;
    }

    .dosage {
        font-size: 1.2rem;
        color: #495057;
    }

    .timing {
        font-size: 0.9rem;
        color: #6c757d;
    }

    .actions a {
        margin-right: 10px;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
    }

    .card-body {
        padding: 20px;
    }

    .card-title {
        font-size: 1.5rem;
        margin-bottom: 10px;
    }

    .card-text {
        font-size: 1rem;
        margin-bottom: 10px;
    }
</style>
