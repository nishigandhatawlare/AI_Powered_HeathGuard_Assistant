@{
    Layout = "_Layout";
    ViewData["Title"] = "Messaging and Communication";
}

<div class="row">
    <!-- Sidebar -->
    <div class="col-md-3">
        <div class="list-group">
            <a href="#" class="list-group-item list-group-item-action active">
                Inbox <span class="badge bg-primary float-end">4</span>
            </a>
            <a href="#" class="list-group-item list-group-item-action">Sent</a>
            <a href="#" class="list-group-item list-group-item-action">Archived</a>
        </div>
    </div>

    <!-- Messaging Area -->
    <div class="col-md-9">
        <div class="card">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h5>Messaging with Dr. Smith</h5>
                    <button class="btn btn-primary btn-sm">New Message</button>
                </div>
            </div>
            <div class="card-body">
                <!-- Chat history -->
                <div class="mb-3">
                    <div class="chat-message d-flex justify-content-start mb-4">
                        <div class="bg-light p-3 rounded">
                            <p class="mb-1"><strong>Dr. Smith:</strong></p>
                            <p class="mb-0">How are you feeling today?</p>
                            <small class="text-muted">10:15 AM</small>
                        </div>
                    </div>
                    <div class="chat-message d-flex justify-content-end mb-4">
                        <div class="bg-primary text-white p-3 rounded">
                            <p class="mb-1"><strong>You:</strong></p>
                            <p class="mb-0">I'm feeling a bit better, thank you.</p>
                            <small class="text-muted">10:17 AM</small>
                        </div>
                    </div>
                    <!-- Additional chat messages go here -->
                </div>

                <!-- Message Input -->
                <form>
                    <div class="mb-3">
                        <textarea class="form-control" rows="3" placeholder="Type your message..."></textarea>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <input type="file" class="form-control-file" id="fileUpload">
                        <button type="submit" class="btn btn-success">Send</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
