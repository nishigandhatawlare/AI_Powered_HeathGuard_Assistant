    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Initialize Health Metrics Chart
        var ctx = document.getElementById('healthMetricsChart').getContext('2d');
        var healthMetricsChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['Week 1', 'Week 2', 'Week 3', 'Week 4'], // Example labels
                datasets: [{
                    label: 'Heart Rate (bpm)',
                    data: [72, 70, 75, 74], // Example data
                    borderColor: 'rgba(78, 115, 223, 1)',
                    backgroundColor: 'rgba(78, 115, 223, 0.2)',
                    fill: true,
                },
                {
                    label: 'Blood Pressure (mmHg)',
                    data: [120, 118, 122, 119], // Example data
                    borderColor: 'rgba(28, 200, 138, 1)',
                    backgroundColor: 'rgba(28, 200, 138, 0.2)',
                    fill: true,
                }]
            },
            options: {
                scales: {
                    x: {
                        beginAtZero: true
                    },
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // Example of real-time data update using AJAX
        function updateHealthMetrics() {
            // Use AJAX to fetch new data from the server and update the chart
            $.ajax({
                url: '/path-to-your-api-endpoint',
                method: 'GET',
                success: function (data) {
                    // Update the chart with new data
                    healthMetricsChart.data.datasets[0].data = data.heartRate;
                    healthMetricsChart.data.datasets[1].data = data.bloodPressure;
                    healthMetricsChart.update();
                }
            });
        }

        // Example: Update chart every 5 minutes
        setInterval(updateHealthMetrics, 300000);
    </script>

